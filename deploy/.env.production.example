# ==============================================
# PsiPilot Assistant - Production Environment
# ==============================================
# Copy this file to .env and fill in your values

# ==============================================
# FRONTEND (Vite build variables)
# ==============================================

# Your Supabase URL (self-hosted)
VITE_SUPABASE_URL=https://lulebraggalast.beget.app

# Your Supabase anon/public key
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# API URL (leave as /api for docker setup)
VITE_API_URL=/api

# ==============================================
# BACKEND (Transcription Service)
# ==============================================

# Supabase URL (same as frontend)
SUPABASE_URL=https://lulebraggalast.beget.app

# Supabase Service Role Key (from Dashboard > Settings > API)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Supabase Anon Key (same as frontend)
SUPABASE_ANON_KEY=your-anon-key-here

# AssemblyAI API Key (for transcription)
ASSEMBLYAI_API_KEY=your-assemblyai-key-here

# OpenAI API Key (for AI features)
OPENAI_API_KEY=your-openai-key-here
