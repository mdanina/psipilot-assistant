# AssemblyAI API key for transcription
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# OpenAI API key for AI analysis
OPENAI_API_KEY=your_openai_api_key

# Supabase configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_ANON_KEY=your_anon_key

# ==============================================
# ENCRYPTION (REQUIRED for PHI data)
# ==============================================
# AES-GCM 256-bit encryption key for PHI data
# Generate with: openssl rand -base64 32
# IMPORTANT: Keep this key secure! Never commit to git!
ENCRYPTION_KEY=your-base64-encryption-key-here

# Server port (optional, defaults to 3001)
PORT=3001

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Environment: 'development' or 'production'
# IMPORTANT: Set to 'production' in production!
NODE_ENV=development

# CORS allowed origins (comma-separated)
# For production: https://your-app.com,https://admin.your-app.com
# For development: http://localhost:5173,http://localhost:3000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
