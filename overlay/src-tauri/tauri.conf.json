{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PsiPilot Overlay",
  "version": "0.1.0",
  "identifier": "com.psipilot.overlay",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PsiPilot Overlay",
        "width": 320,
        "height": 600,
        "resizable": true,
        "alwaysOnTop": true,
        "decorations": true,
        "transparent": false,
        "minWidth": 280,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://lulebraggalast.beget.app http://localhost:3001;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
